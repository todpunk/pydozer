{% extends "base.jinja2" %}
{% block title %}Posts for tag {{ tag }}{% endblock %}
{% block content %}
	{% for post in posts %}
		<div class="tag_post">
			<h3><a href="{{ post.filename }}.html">{{ post.title }}</a></h3>
			<div>posted: {{ post.posted_date.isoformat() }}</div>
		</div>
	{% endfor %}
	<div id = 'page_numbers'>Pages
	{% if page_num > 1 %}
		<span class="pages"><a href="{{ tag_file }}{{ page_num - 1 }}.html">&lt;</a></span>
	{% endif %}
		<span class="pages current_page">{{ page_num }}</span>
	{% if page_num < total_pages %}
		<span class="pages"><a href="{{ tag_file }}{{ page_num + 1 }}.html">&gt;</a></span>
	{% endif %}
	</div>
{% endblock %}